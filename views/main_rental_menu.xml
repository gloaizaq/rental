<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <menuitem id="main_rental_menu" name="Alquileres" />

  <menuitem id="rental_menu" name="Alquileres"
            parent="main_rental_menu"/>

  <record model="ir.actions.act_window" id="shop_list_action">
      <field name="name">Locales</field>
      <field name="res_model">rental.shop</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para agregar un local
          </p>
      </field>
  </record>

  <record model="ir.ui.view" id="shop_list_view">
      <field name="name">Lista de Locales</field>
      <field name="model">rental.shop</field>
      <field name="arch" type="xml">
          <tree>
              <field name="number"/>
              <field name="area"/>
              <field name="floor_id"/>
          </tree>
      </field>
  </record>

  <record model="ir.ui.view" id="shop_form_view">
      <field name="name">Local</field>
      <field name="model">rental.shop</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="number"/>
              <field name="area"/>
              <field name="watermeter"/>
              <field name="currentmeter"/>
              <field name="floor_id"/>
              <field name="document_id"/>
            </group>
          </sheet>
        </form>
      </field>
  </record>

  <menuitem id="shop_menu" name="Locales" parent="rental_menu" action="shop_list_action"/>

  <record model="ir.actions.act_window" id="floor_list_action">
      <field name="name">Pisos</field>
      <field name="res_model">rental.floor</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para agregar un piso
          </p>
      </field>
  </record>

  <record model="ir.ui.view" id="floor_list_view">
      <field name="name">Lista de Pisos</field>
      <field name="model">rental.floor</field>
      <field name="arch" type="xml">
          <tree>
              <field name="number"/>
          </tree>
      </field>
  </record>

  <record model="ir.ui.view" id="floor_form_view">
      <field name="name">Piso</field>
      <field name="model">rental.floor</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="number"/>
              <field name="shop" attrs="{'readonly': True}"/>
              <field name="building_id"/>
            </group>
          </sheet>
        </form>
      </field>
  </record>

  <menuitem id="floor_menu" name="Pisos" parent="rental_menu" action="floor_list_action"/>7

  <record model="ir.actions.act_window" id="building_list_action">
      <field name="name">Edificios</field>
      <field name="res_model">rental.building</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para agregar un edificio
          </p>
      </field>
  </record>

  <record model="ir.ui.view" id="building_list_view">
      <field name="name">Lista de Edificios</field>
      <field name="model">rental.building</field>
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <field name="address"/>
          </tree>
      </field>
  </record>

  <record model="ir.ui.view" id="building_form_view">
      <field name="name">Edificio</field>
      <field name="model">rental.building</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="address"/>
              <field name="total_area"/>
              <field name="built_area"/>
              <field name="floors" attrs="{'readonly': True}"/>
              <field name="real_value"/>
              <field name="fiscal_value"/>
            </group>
          </sheet>
        </form>
      </field>
  </record>

  <menuitem id="building_menu" name="Edificios" parent="rental_menu" action="building_list_action"/>

  <record model="ir.actions.act_window" id="document_list_action">
      <field name="name">Documentos</field>
      <field name="res_model">rental.document</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,calendar</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para agregar un documento de alquiler
          </p>
      </field>
  </record>

  <record model="ir.ui.view" id="document_list_view">
      <field name="name">Lista de Documentos</field>
      <field name="model">rental.document</field>
      <field name="arch" type="xml">
          <tree>
              <field name="client_id"/>
              <field name="contract_number"/>
              <field name="shops"/>
              <field name="start_date"/>
              <field name="end_date"/>
          </tree>
      </field>
  </record>

  <record model="ir.ui.view" id="document_form_view">
      <field name="name">Documento</field>
      <field name="model">rental.document</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="client_id"/>
              <field name="contract_number"/>
              <field name="shops" attrs="{'readonly': True}"/>
              <field name="montly_rent_fee"/>
              <field name="montly_manteinance_fee"/>
              <field name="start_date" />
              <field name="end_date"/>
              <field name="annual_increase_percentage"/>
            </group>
          </sheet>
        </form>
      </field>
  </record>

  <record model="ir.ui.view" id="document_calendar_view">
      <field name="name">Documento</field>
      <field name="model">rental.document</field>
      <field name="arch" type="xml">
        <calendar string="Calendario de documentos" date_start="start_date" date_stop="end_date">
          <field name="contract_number" />
        </calendar>
      </field>
  </record>

  <menuitem id="document_menu" name="Documentos" parent="rental_menu" action="document_list_action"/>
</odoo>
